{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"pankajsonagara/multi-client",
            "hostname":"client",
            "essential": false,
			"memory": 128
        },
        {
            "name":"server",
            "image":"pankajsonagara/multi-server",
            "hostname":"api",
            "essential": false,
			"memory": 128
        },{
            "name":"worker",
            "image":"pankajsonagara/multi-worker",
            "hostname":"worker",
            "essential": false,
			"memory": 128
        },{
            "name":"nginx",
            "image":"pankajsonagara/multi-nginx",
            "hostname":"nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client","server"],
			"memory": 128
        }
    ]
}